<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LedWall" x:Class="LedWall.MainWindow"
        Title="MainWindow" Height="458" Width="700" Loaded="Window_Loaded">
    <Window.DataContext>
        <local:Ledwall/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="imgPreview" HorizontalAlignment="Left" Height="407" Margin="10,10,0,0" VerticalAlignment="Top" Width="672" DataContext="{Binding Mode=OneWay}" Source="{Binding Preview}"/>

    </Grid>
</Window>
